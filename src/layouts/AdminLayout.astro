---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <link rel="stylesheet" href="https://cdn.tiny.cloud/1/8hsrzap36k5uyz2egzo6svrj5l9xxtht575hau4kixq9tp83/tinymce/7/tinymce.min.js">
  <script src="https://cdn.tiny.cloud/1/8hsrzap36k5uyz2egzo6svrj5l9xxtht575hau4kixq9tp83/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body class="bg-gray-100 min-h-screen">
    <main class="container mx-auto p-4">
      <slot />
    </main>
  </body>
</html>

<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap');
  body {
    font-family: 'Inter', sans-serif;
  }
</style>