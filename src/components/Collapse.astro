---
const { label, index = null } = Astro.props;
---

<div class="group outline-none accordion-section" tabindex="1">
  <div class="group group-focus:bg-[#F95C04] group-focus:shadow-none shadow-card bg-gradient-to-r from-[#F95C04] via-7% to-[#FF8E0A] to-82% group-focus:rounded-b-none group-focus:rounded-t-3xl rounded-[60px] md:rounded-3xl flex justify-between px-4 py-3 items-center transition-colors ease duration-500 cursor-pointer pr-10 relative">
    <div class="flex items-center group-focus:text-white px-4 sm:px-10 pt-6 sm:pt-10 w-full transition ease duration-500">
      <div class="flex pb-6 sm:pb-10 gap-3 sm:gap-5 w-full items-center">
        <div class="flex justify-between w-full items-center rounded-full">
          <div class="flex items-center gap-3 sm:gap-5">
            {
              index && (
                <>
                  <p class="text-4xl sm:text-6xl font-medium text-white flex items-center">
                    0{index}
                  </p>
                  <p class="text-base sm:text-lg md:text-xl lg:text-3xl text-white">{label}</p>
                </>
              )
            }
          </div>
          <div class="rounded-full after:h-[2px] relative accodion-chevron flex items-center md:bg-transparent h-8 w-8 sm:h-10 sm:w-10 md:h-12 md:w-12 flex-shrink-0 ml-2 sm:ml-4">
          </div>
        </div>
      </div>
    </div>
  </div>
  <div
    class="group-focus:max-h-screen max-h-0 shadow-card rounded-b-3xl bg-gradient-to-r from-[#F95C04] via-7% to-[#FF8E0A] to-82% group-focus:bg-lime px-4 overflow-hidden transition ease duration-500"
  >
    <p class="text-justify text-white p-6 sm:p-10 text-sm sm:text-lg md:text-xl lg:text-2xl">
      <slot />
    </p>
  </div>
</div>

<style>
  .accodion-chevron::after {
    content: "";
    @apply h-[70%] w-[6px] sm:w-[8px] transform transition-transform bg-black absolute left-1/2 -translate-x-1/2;
  }
  .accodion-chevron::before {
    content: "";
    @apply h-[70%] w-[6px] sm:w-[8px] rotate-90 transform bg-black absolute left-1/2 -translate-x-1/2;
  }
  .group:focus-within .accodion-chevron::after {
    @apply rotate-90;
  }
</style>